{
  "name": "@sassoftware/viya-assistantjs",
  "version": "0.10.3",
  "description": "A starter library to build chats for SAS Viya uing OpenAI or AzureAI  Assistant API",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.7.2"
  },
  "type": "module",
  "scripts": {
    "start": "cross-env NODE_TLS_REJECT_UNAUTHORIZED=0 node --no-warnings cli",
    "test": "cd example && cross-env NODE_TLS_REJECT_UNAUTHORIZED=0 node cli.js",
    "addsas": "cd example && cross-env NODE_TLS_REJECT_UNAUTHORIZED=0 node clisas.js",
    "debug": "cd example && cross-env NODE_TLS_REJECT_UNAUTHORIZED=0 node --inspect-brk cli.js",
    "build": "rimraf dist && microbundle --name viyaAssistantjs",
    "esm": "webpack  --config webpack.config.mjs",
    "umd": "webpack  --config webpack.config.umd.mjs",
    "wpack": "rimraf dist && npm run umd && npm run esm",
    "pub": "npm publish --tag dev --access public",
    "lint": "eslint . --ext .js --fix",
    "jsdoc": "rimraf docs && jsdoc -c jsdoc.json"
  },
  "repository": "https://github.com/sassoftware/restaf-demos/tree/viya-assistantjs",
  "source": "./src/index.js",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.modern.js"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.module.js",
  "unpkg": "./dist/index.umd.js",
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "gpt",
    "gpt functions",
    "openai assistant",
    "azureai assistant",
    "SAS REST API",
    "restaf"
  ],
  "author": "Deva Kumar <deva.kumar@sas.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "@sassoftware/restafedit": "^2.4.7",
    "@azure/openai-assistants": "^1.0.0-beta.5",
    "@azure/openai": "^1.0.0-beta.11",
    "openai": "^4.26.0"
  },
  "devDependencies": {
    "babel-loader": "^9.1.3",
    "better-docs": "^2.7.3",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "eslint": "^8.56.0",
    "eslint-plugin-n": "^16.6.2",
    "inquirer": "^9.2.15",
    "jsdoc": "^4.0.2",
    "microbundle": "^0.15.1",
    "rimraf": "^3.0.2",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  }
}
